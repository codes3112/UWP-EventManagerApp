<UserControl
    x:Class="UWPQuickStart.Views.EventHome"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPQuickStart.Views"
    xmlns:model="using:UWPQuickStart.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:fbsdk="using winsdkfb; using winsdkfb.Graph;"
    mc:Ignorable="d">


    <Grid d:DataContext="{d:DesignInstance Type=model:EventModel}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Width="800"                  
                  Height="710"
                  Background="#002db3"
                  Opacity="0.9"
                 >
               
                <Grid.RowDefinitions>
                    <RowDefinition Height="80" />
                    <RowDefinition Height="100" />
                    <RowDefinition Height="Auto" MinHeight="98" />
                    <RowDefinition Height="80" />
                    <RowDefinition Height="88" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="1"  Margin="0,40,0,40">
                    <TextBlock x:ConnectionId='7' Name="usernameTxt" 
                               FontWeight="SemiBold" 
                               HorizontalAlignment="Center"
                              
                               FontSize="24"                               
                               VerticalAlignment="Center" 
                               Foreground="Yellow"                              
                               TextWrapping="WrapWholeWords" 
                               TextAlignment="Center"/>
                </Grid>
                <Grid Grid.Row="2" 
                      HorizontalAlignment="Center" 
                      VerticalAlignment="Center" 
                      Width="280" Height="74" Margin="270,20,250,10"
                      >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="" FontFamily="Segoe UI Symbol" Grid.Row="0" 
                                   FontSize="22" 
                                   Foreground="Yellow"/>
                        <TextBlock Text="" 
                                   FontFamily="Segoe UI Symbol" 
                                   Grid.Row="1" FontSize="22" 
                                   Margin="0,12,0,0" 
                                   Foreground="Yellow"/>
                       
                          
                            <TextBlock x:ConnectionId='5' Name="ev_address" 
                                       TextWrapping="WrapWholeWords"
                                           
                                   FontSize="14" Grid.Column="1"                                      
                                   Foreground="Yellow"/>
                    
                       
                        <TextBlock x:ConnectionId='6' Name="ev_time"                                    
                                   FontSize="14" Grid.Row="1" Grid.Column="1" Margin="0,12,0,0"
                                   Foreground="Yellow"/>
                    </Grid>
                </Grid>
                <Grid Grid.Row="3">
                    <TextBlock Text="Select Your Event" 
                           FontWeight="SemiBold" 
                           Foreground="Yellow"
                           HorizontalAlignment="Left" 
                           VerticalAlignment="Center"
                           Margin="275,20,0,10" Height="50" Width="275" 
                           RenderTransformOrigin="0.6,-1.15"/>
                </Grid>

                <Grid Grid.Row="4"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                      >
                    <ComboBox x:ConnectionId='2'
                            x:Name="_linedUpEvents"
                            Header="Event Selection List"
                            HorizontalAlignment="Left"                            
                            Width="280"
                            SelectedIndex="0" Margin="20,6,0,0"
                            Foreground="Yellow">
                        <ComboBoxItem
                                 Content="John's Band Night" />
                        <ComboBoxItem
                                 Content="Hackathon" />
                        <ComboBoxItem
                                 Content="Ariana Grande Musical" />
                        <ComboBoxItem
                                 Content="Microsoft Ignite"/>
                    </ComboBox>

                    <CalendarDatePicker x:ConnectionId='3' x:Name="control_calendar"
                            HorizontalAlignment="Left"
                            Margin="20,73,0,-20"
                            VerticalAlignment="Top"
                            DateFormat="{}{day.integer} {month.full} {year.full}"
                            PlaceholderText="Select Event Date" 
                                        Height="38" 
                                        RenderTransformOrigin="0.5,0.5"
                                        Width="280"
                                        Foreground="Yellow">
                    </CalendarDatePicker>
                    <TimePicker x:ConnectionId='4' x:Name="control_time" 
                                Header="What time works for you?" 
                                Margin="20,105,0,-80" 
                                Width="280"
                                Foreground="Yellow"/>

                </Grid>

                <Button x:ConnectionId='1'
                    VerticalAlignment="Center" 
                    Height="74"
                    Width="280"
                    Margin="20,100,0,-20"
                    HorizontalAlignment="Center"                    
                    Content="ADD TO MY CALENDAR"  
                                        
                    FontSize="24" 
                    Background="{StaticResource ButtonBrush}"                    
                    Grid.Row="5"/>




            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>

